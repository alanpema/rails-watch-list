  <% if @list.photo.attached? %>
    <div class="banner_show" style="height: 30vh; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>);">
  <% else %>
     <div class="banner_show">
  <% end %>
    <div class="container text-white ">
      <h1><%= @list.name%></h1>
    </div>
  </div>
      <p><%=link_to "add movies", new_list_bookmark_path(@list), class:"btn btn-warning rounden-pill text white"%></p>
  <ul>
  <% @list.bookmarks.each do |bookmark| %>
  <li>Title:  <%= bookmark.movie.title%> </li>
    comment:  <%= bookmark.comment %>
  <% end %>
  </ul>


  <h3 class="text-white">Leave a Review</h3>
  <%= simple_form_for [@list, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating %>
    <%= f.button :submit, class:"btn btn-warning" %>
  <% end %>


  <h1 class="text-white">Reviews:</h1>
  <ul>
  <% @list.reviews.each do |review| %>
    <li><%= review.comment %> - Rating: <%= review.rating.to_i%></li>
  </ul>
  <% end %>
