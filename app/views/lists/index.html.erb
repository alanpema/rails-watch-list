<body>
  <div class="listas">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "cajas.jpg" %>);">
      <div class="container">
        <h1 class="text-white">International<strong> Movie</strong> playlist</h1>
        <p class="text-white">Create movies recomendations, review others playlists and search the best ones</p>
      </div>
    </div>
    <div>
    <div class="boton">
      <%= link_to "Playlist generator", new_list_path,class:"btn btn-outline-warning btl-lg text-decoration-none" %>
    </div>
  </div>
      <div class="alert alert-black text-white" role="alert">
      <p> 📽️Movie playlists 🍿 </p>
      </div>
        <ul class="cards">
        <% @lists.each do |list|%>
          <li class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTnRnXC7tI_y9PVUKF7DpxD4azBcyL9kANfWg&usqp=CAU)" >
            <%=link_to list.name, list_path(list), class:"text-decoration-none text-warning"  %>
          </li>
        <% end %>
        </ul>
  </div>

  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
  </div>
</body>
